{
  "include": ["_api/**/*", "api-lib/**/*", "scripts/**/*"],
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDirs": ["./scripts"],
    "isolatedModules": true,
    "lib": ["esnext"],
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  }
}
