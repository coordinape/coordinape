{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDirs": ["./scripts"],
    "isolatedModules": true,
    "lib": ["esnext"]
  },
  "include": ["./typechain"],
  "files": ["./hardhat.config.ts", "./deploymentInfo.json"]
}
