{
  "name": "@coordinape/hardhat",
  "description": "Coordinape contracts",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "compile": "hardhat clean && hardhat compile",
    "build": "tsc && ./scripts/cp-declarations.sh",
    "build:clean": "rm -rf ./{artifacts,cache,typechain,dist,data}",
    "codegen": "ts-node scripts/generate-deployment-info.ts",
    "dev": "./scripts/start-node.sh",
    "deploy": "hardhat deploy",
    "test": "hardhat test",
    "hardhat:ganache": "cd .. && yarn hardhat:ganache",
    "deploy:optimismgoerli": "hardhat --network optimismGoerli deploy && yarn verify:optimismgoerli",
    "verify:optimismgoerli": "hardhat --network optimismGoerli etherscan-verify &&  yarn hardhat --network optimismGoerli sourcify",
    "cosoul:setup:optimismgoerli": "hardhat --network optimismGoerli run scripts/manage/cosoul_setup_options.ts",
    "cosoul:setup:optimism": "hardhat --network optimism run scripts/manage/cosoul_setup_options.ts",
    "colinks:setup:optimism": "hardhat --network optimism run scripts/manage/colinks_setup.ts",
    "colinks:setup:optimismgoerli": "hardhat --network optimismGoerli run scripts/manage/colinks_setup.ts",
    "deploy:optimism": "hardhat --network optimism deploy && yarn verify:optimism",
    "verify:optimism": "hardhat --network optimism etherscan-verify &&  yarn hardhat --network optimism sourcify",
    "setup:optimism": "hardhat --network optimism run scripts/manage/cosoul_setup_options.ts",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.4",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/contracts": "4.9.2",
    "@typechain/ethers-v5": "7.0.0",
    "@typechain/hardhat": "2.0.0",
    "@types/chai": "4.2.22",
    "@types/debug": "4.1.7",
    "@types/mocha": "9.0.0",
    "@types/node": "15.0.3",
    "chai": "4.3.4",
    "dotenv": "10.0.0",
    "ethereum-waffle": "^4.0.0-alpha.0",
    "ethers": "5.7.2",
    "ganache": "^7.0.2",
    "hardhat": "^2.14.0",
    "hardhat-deploy": "0.11.30",
    "ts-node": "9.1.1",
    "typechain": "5.0.0",
    "typescript": "4.4.3"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^4.9.2"
  }
}
