{
  "name": "@coordinape/hardhat",
  "description": "Coordinape contracts",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "compile": "hardhat clean && hardhat compile",
    "build": "tsc -p tsconfig-typechain.json  && ./scripts/cp-declarations.sh",
    "build:clean": "rm -rf ./{artifacts,cache,typechain,dist,data}",
    "codegen": "tsx scripts/generate-deployment-info.ts",
    "export-abis": "npx hardhat compile && tsx scripts/exportABIs.ts",
    "dev": "./scripts/start-node.sh",
    "deploy": "hardhat deploy",
    "test": "hardhat test",
    "hardhat:ganache": "cd .. && pnpm hardhat:ganache",
    "deploy:optimismsepolia": "hardhat --network optimismSepolia deploy && pnpm verify:optimismsepolia",
    "verify:optimismsepolia": "hardhat --network optimismSepolia etherscan-verify --api-url https://api-sepolia-optimism.etherscan.io &&  pnpm hardhat --network optimismSepolia sourcify",
    "cosoul:setup:optimismsepolia": "hardhat --network optimismSepolia run scripts/manage/cosoul_setup_options.ts",
    "cosoul:setup:optimism": "hardhat --network optimism run scripts/manage/cosoul_setup_options.ts",
    "colinks:setup:optimism": "hardhat --network optimism run scripts/manage/colinks_setup.ts",
    "colinks:setup:optimismSepolia": "hardhat --network optimismSepolia run scripts/manage/colinks_setup.ts",
    "deploy:optimism": "hardhat --network optimism deploy && pnpm verify:optimism",
    "verify:optimism": "hardhat --network optimism etherscan-verify &&  pnpm hardhat --network optimism sourcify",
    "setup:optimism": "hardhat --network optimism run scripts/manage/cosoul_setup_options.ts",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.4",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/contracts": "4.9.2",
    "@typechain/ethers-v5": "7.0.0",
    "@typechain/hardhat": "2.0.0",
    "@types/chai": "4.2.22",
    "@types/debug": "4.1.7",
    "@types/mocha": "9.0.0",
    "@types/node": "15.0.3",
    "chai": "4.3.4",
    "dotenv": "10.0.0",
    "ethereum-waffle": "^4.0.0-alpha.0",
    "ethers": "5.7.2",
    "ganache": "^7.0.2",
    "hardhat-deploy": "0.11.30",
    "hardhat-gas-reporter": "^1.0.9",
    "ts-node": "^10.9.2",
    "typechain": "5.0.0",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.2",
    "hardhat": "^2.19.4",
    "tsx": "^4.7.0",
    "viem": "^2.19.4"
  },
  "nodeOptions": "--loader ts-node/esm"
}
